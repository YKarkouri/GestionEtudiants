<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ma.est.gestionetudiants.controller.AccueilController">
    <center>
        <StackPane>
            <VBox spacing="20" alignment="CENTER">
                <Button fx:id="etudiantsButton" mnemonicParsing="false" onAction="#handleEtudiantsClick" text="Gestion des étudiants"/>
                <Button fx:id="enseignantsButton" mnemonicParsing="false" onAction="#handleEnsignantsClick" text="Gestion des enseignants"/>
                <Button fx:id="absencesButton" mnemonicParsing="false" onAction="#handleAbsencesClick" text="Gestion des absences"/>
                <Button fx:id="coursButton" mnemonicParsing="false" onAction="#handleCoursClick" text="Gestion des cours/notes"/>
                <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#handleLogoutClick" text="Déconnexion"/>
            </VBox>
        </StackPane>
    </center>
</BorderPane>
