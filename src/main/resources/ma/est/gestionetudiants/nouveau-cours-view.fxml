<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ma.est.gestionetudiants.controller.NouveauCoursController">

    <center>
        <VBox spacing="10" alignment="CENTER">
            <Label text="Nom du Cours"/>
            <TextField fx:id="nomTextField" promptText="Nom du cours"/>

            <Label text="Description du Cours"/>
            <TextArea fx:id="descriptionTextArea" promptText="Description du cours"/>

            <Label text="Sélectionner un Enseignant"/>
            <ComboBox fx:id="enseignantComboBox" promptText="Sélectionner un enseignant"/>

            <Label text="Sélectionner plusieurs Étudiants"/>
            <ListView fx:id="etudiantsListView" prefWidth="200" prefHeight="200" editable="true"/>

            <Button text="Ajouter" onAction="#handleAddButtonAction"/>
            <Button text="Retour" onAction="#handleBackButtonAction"/>
        </VBox>
    </center>

</BorderPane>